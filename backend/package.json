    "mongoose": "^8.18.0",
    "morgan": "^1.10.1",
    "prisma": "^6.16.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
